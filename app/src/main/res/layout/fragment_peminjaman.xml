<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/barangPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Activity_peminjaman">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D2B55"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <!-- Judul Dashboard -->
            <TextView
                android:id="@+id/tvDashboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PEMINJAMAN"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsbold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <!-- Kartu Peminjaman -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginHorizontal="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#0D2B55"
                    app:strokeColor="#0D2B55"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:layout_margin="2dp">

                        <!-- Baris Atas: Icon dan Nama -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/user"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="Foto peminjam" />

                            <TextView
                                android:id="@+id/tvNamaPeminjam"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Azka Pebriani"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#2A2A2A"
                                android:fontFamily="@font/poppinsmedium"/>
                        </LinearLayout>

                        <!-- Nama Barang -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="52dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/barang4"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="Ikon barang" />

                            <TextView
                                android:id="@+id/tvNamaBarang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mikroskop"
                                android:textColor="#424242"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppinsmedium"/>
                        </LinearLayout>

                        <!-- Tanggal Pinjam dan Kembali -->
                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pinjam: 1 Mei 2025  â€¢  Kembali: 5 Mei 2025"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppinsmedium"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="52dp" />

                        <!-- Status -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginStart="52dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/chek"
                                android:layout_marginEnd="4dp"
                                android:contentDescription="Status selesai" />

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sudah Dikembalikan"
                                android:textSize="14sp"
                                android:textColor="#4CAF50"
                                android:fontFamily="@font/poppinsmedium"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
