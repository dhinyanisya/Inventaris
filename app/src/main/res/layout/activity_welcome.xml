<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2B55"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/logoHimatf"
        android:layout_width="403dp"
        android:layout_height="393dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logohima"
        app:layout_constraintBottom_toTopOf="@+id/appTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SimBarTIF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintTop_toBottomOf="@id/logoHimatf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistem Inventaris Barang\nHM Teknik Informatika."
        android:textSize="18sp"
        android:textColor="#D6D6D6"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Get In"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppinsbold"
        android:backgroundTint="#7A5C23"
        android:layout_marginTop="160dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/appSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>